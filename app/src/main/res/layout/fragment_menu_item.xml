<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/parent_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_icon"
                android:layout_width="200px"
                android:layout_height="200px"
                android:src="@drawable/img_menu_daily"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@+id/profile_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="{daily menu name}"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_toRightOf="@id/profile_icon"/>

            <ImageView
                android:id="@+id/profile_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/profile_text"
                android:src="@drawable/img_arrow_light" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>