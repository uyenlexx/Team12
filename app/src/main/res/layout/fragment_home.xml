<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.FragmentHome">
    <TextView
        android:id="@+id/hello_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="@string/hello"
        android:textColor="@color/medium_green"
        android:fontFamily="@font/nunito_bold"
        android:textSize="25dp"
        android:lineSpacingExtra="8sp"
        android:translationY="-4.14sp"
        android:gravity="center_horizontal|top"/>
    <TextView
        android:id="@+id/hello_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hello_title"
        android:text="@string/hello_desc"
        android:textColor="@color/light_grey"
        android:fontFamily="@font/nunito_bold"
        android:textSize="15dp"
        android:lineSpacingExtra="8sp"
        android:translationY="-4.14sp"
        android:gravity="center_horizontal|top" />

    <RelativeLayout
        android:id="@+id/calories_cal_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/container_calories_calculator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/hello_desc_title">
        <TextView
            android:id="@+id/calories_cal_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:gravity="top"
            android:text="@string/meal_calories"
            android:letterSpacing="-0.02"
            android:textSize="15dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/dark_peachy" />
        <TextView
            android:id="@+id/calories_cal_desc"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/meal_calories_desc"
            android:textSize="16dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/red_brown"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.43sp"
            android:gravity="top"
            android:layout_below="@id/calories_cal_header"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calories_cal_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/meal_calories_start"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_bold"
            android:textAllCaps="false"
            android:layout_below="@+id/calories_cal_desc"
            android:background="@drawable/container_start_now" />
        <ImageView
            android:id="@+id/calories_cal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_calories_cal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/calories_cal_header"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/menu_builder_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello_desc_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/container_menu_builder">
        <TextView
            android:id="@+id/menu_builder_header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:text="@string/menu_builder"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menu_builder_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/menu_builder_header"
            android:background="@drawable/build_now_container"
            android:fontFamily="@font/nunito_bold"
            android:textAllCaps="false"
            android:text="@string/meal_calories_start"
            android:textColor="@color/light_purple"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/trending_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trending"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:textSize="20dp"
        android:layout_below="@id/menu_builder_container"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trending_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:layout_below="@id/trending_header">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>