<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.FragmentSearch">

    <EditText
        android:id="@+id/username_input"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/white_grey"
        android:drawableLeft="@drawable/ic_search_default"
        android:drawablePadding="10dp"
        android:hint="@string/search_hint"
        android:padding="15dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/ingredients_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredients_category"
        android:fontFamily="@font/nunito_bold"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/username_input"/>

    <TextView
        android:id="@+id/recipes_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipes_category"
        android:fontFamily="@font/nunito_bold"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ingredients_category"/>

</RelativeLayout>